.Tabs_title {
    display: flex;
    position: sticky;
    top: 0;
    z-index: 300;
    background-color: white;
    height:80rpx;
}

.title_item {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15rpx 0;
    color: var(--themecolor);
    background-color: white;
}

.active {
    color: #000000;
    border-bottom: 5rpx solid currentColor;
    font-weight: bolder;
}