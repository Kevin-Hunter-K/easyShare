page {
  width: 100vw;
  height: 100vh;
}
.img {
  width: 90rpx;
  position: fixed;
  bottom: 30rpx;
  right: 40rpx;
  z-index: 400;
}
.container {
  width: 100vw;
}
.container .article_item {
  display: flex;
  flex-direction: column;
  width: 100vw;
  background-color: white;
}
.container .article_item .info_container {
  width: 100vw;
  display: flex;
  align-items: center;
  height: 120rpx;
}
.container .article_item .info_container .user_img_container {
  height: 80rpx;
  display: flex;
  margin: 0 20rpx 0 25rpx;
}
.container .article_item .info_container .user_img_container image {
  border-radius: 40rpx;
  height: 80rpx;
}
.container .article_item .info_container .user_container {
  display: flex;
  flex-direction: column;
  height: 80rpx;
  justify-content: space-around;
}
.container .article_item .info_container .user_container .user_name {
  color: black;
  font-size: 32rpx;
}
.container .article_item .info_container .user_container .time {
  color: var(--themecolor);
  font-size: 24rpx;
}
.container .article_item .content {
  display: block;
  margin: 20rpx 25rpx 20rpx 25rpx;
  overflow-wrap: break-word;
  font-size: 28rpx;
}
.container .article_item .img_container {
  display: flex;
  width: 100vw;
  padding: 0 25rpx;
  margin: 10rpx 0;
}
.container .article_item .img_container .img_1 {
  width: calc((100vw - 50rpx) / 2 - 10rpx);
  height: 200rpx;
  border-radius: 15rpx;
  margin-right: 15rpx;
}
.container .article_item .img_container .img_2 {
  width: calc((100vw - 50rpx) / 3 - 10rpx);
  height: 200rpx;
  border-radius: 15rpx;
  margin-right: 15rpx;
}
.container .article_item .video_container {
  display: flex;
  width: 100vw;
  padding: 0 25rpx;
  margin: 10rpx 0;
}
.container .article_item .video_container video {
  width: calc((100vw - 50rpx) / 2 - 10rpx);
  height: 200rpx;
  border-radius: 15rpx;
}
.container .article_item .tip {
  display: flex;
  width: 100vw;
  height: 100rpx;
  justify-content: space-around;
}
.container .article_item .tip .item_container {
  display: flex;
  height: 100rpx;
  width: calc((100vw - 50rpx) / 3);
  align-items: center;
  justify-content: center;
}
.container .article_item .tip .item_container image {
  height: 40rpx;
  margin-right: 20rpx;
}
.container .article_item .tip .item_container .word {
  font-weight: bolder;
  height: 40rpx;
  font-size: 28rpx;
}
