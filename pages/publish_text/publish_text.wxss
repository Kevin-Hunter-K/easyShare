page {
  height: 100%;
}
.cantainer {
  height: 100%;
}
.cantainer .title_cantainer {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.cantainer .title_cantainer .redPoint {
  display: flex;
  justify-content: center;
  align-items: center;
  color: red;
}
.cantainer .title_cantainer input {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}
.cantainer .content {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 560rpx;
  padding: 10rpx 10rpx 10rpx 15rpx;
}
.cantainer .content textarea {
  width: 99%;
  height: 560rpx;
  font-size: 30rpx;
}
.cantainer .picker_cantainer {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  border-bottom: 3rpx solid #eee;
  padding-left: 10rpx;
}
.cantainer .picker_cantainer .hint {
  font-size: 32rpx;
}
.cantainer .picker_cantainer .redPoint {
  display: flex;
  justify-content: center;
  align-items: center;
  color: red;
  height: 100%;
}
.cantainer .picker_item {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  right: 50rpx;
}
